<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_space"
    tools:context=".ui.main.MainActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.TORI.Display"
        android:textColor="@color/neon_cyan"
        android:shadowColor="@color/neon_cyan_dim"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_app_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_tagline"
        android:textAppearance="@style/TextAppearance.TORI.Caption"
        android:textColor="@color/text_secondary"
        android:letterSpacing="0.1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_app_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Status Card (Glassmorphism) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_main_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_glass_card"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_app_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM STATUS"
            android:textAppearance="@style/TextAppearance.TORI.Caption"
            android:textColor="@color/neon_cyan"
            android:letterSpacing="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_detection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STANDBY"
            android:textAppearance="@style/TextAppearance.TORI.Headline"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_status_label"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- EAR Value Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EAR: "
                android:textColor="@color/text_secondary" />
                
            <TextView
                android:id="@+id/tv_ear_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/neon_green"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Start Co-Pilot Button -->
        <Button
            android:id="@+id/btn_start_monitoring"
            style="@style/Theme.TORI.Button.Neon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_copilot"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detection_status" />
            
        <Button
            android:id="@+id/btn_stop_monitoring"
            style="@style/Theme.TORI.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_stop_monitoring"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_detection_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quick Actions Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/card_main_status">

        <!-- HUD Mode -->
        <Button
            android:id="@+id/btn_hud_mode"
            style="@style/Theme.TORI.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_hud_mode"
            android:drawableTop="@android:drawable/ic_menu_view" 
            android:drawableTint="@color/neon_purple" />

        <!-- Trip Log -->
        <Button
            android:id="@+id/btn_trip_log"
            style="@style/Theme.TORI.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_trip_log"
            android:drawableTop="@android:drawable/ic_menu_recent_history"
            android:drawableTint="@color/neon_orange" />

        <!-- Settings -->
        <Button
            android:id="@+id/btn_settings"
            style="@style/Theme.TORI.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/btn_settings"
            android:drawableTop="@android:drawable/ic_menu_preferences"
            android:drawableTint="@color/text_secondary" />
            
        <!-- Contacts -->
        <Button
            android:id="@+id/btn_contacts"
            style="@style/Theme.TORI.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/nav_contacts"
            android:drawableTop="@android:drawable/ic_menu_call"
            android:drawableTint="@color/text_secondary" />

    </GridLayout>

    <!-- Emergency SOS (Bottom) -->
    <Button
        android:id="@+id/btn_emergency_sos"
        style="@style/Theme.TORI.Button.SOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Voice Assistant (Tori) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voice_assistant_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_glass_card"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/btn_emergency_sos"
        app:layout_constraintEnd_toEndOf="parent">

        <com.tori.safety.voice.VoiceAssistantView
            android:id="@+id/voice_assistant_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_voice_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tori"
            android:textSize="12sp"
            android:textColor="@color/neon_cyan"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/voice_assistant_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
