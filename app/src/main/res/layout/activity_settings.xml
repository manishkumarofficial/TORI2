<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.settings.SettingsActivity">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_back"
            android:tint="@color/text_primary" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_title"
            android:textAppearance="@style/TextAppearance.TORI.Headline2"
            android:textColor="@color/text_primary"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Detection Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface_secondary"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_detection"
                        android:textAppearance="@style/TextAppearance.TORI.Headline2"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- EAR Threshold -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/settings_ear_threshold"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_ear_threshold_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.25"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/safety_yellow"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_ear_threshold_description"
                            android:textAppearance="@style/TextAppearance.TORI.Caption"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <SeekBar
                            android:id="@+id/seek_ear_threshold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="50"
                            android:progress="25"
                            android:progressTint="@color/safety_yellow" />

                    </LinearLayout>

                    <!-- Consecutive Frames -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/settings_consecutive_frames"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_consecutive_frames_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/safety_yellow"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_consecutive_frames_description"
                            android:textAppearance="@style/TextAppearance.TORI.Caption"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <SeekBar
                            android:id="@+id/seek_consecutive_frames"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="30"
                            android:progress="10"
                            android:progressTint="@color/safety_yellow" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Alert Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface_secondary"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_alerts"
                        android:textAppearance="@style/TextAppearance.TORI.Headline2"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Alert Volume -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/settings_alert_volume"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_volume_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/safety_yellow"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seek_volume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="80"
                            android:progressTint="@color/safety_yellow" />

                    </LinearLayout>

                    <!-- Vibration Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_vibration_enabled"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switch_vibration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:thumbTint="@color/safety_yellow"
                            android:trackTint="@color/surface_elevated" />

                    </LinearLayout>

                    <!-- TTS Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_tts_enabled"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switch_tts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:thumbTint="@color/safety_yellow"
                            android:trackTint="@color/surface_elevated" />

                    </LinearLayout>

                    <!-- Language Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language"
                            android:textAppearance="@style/TextAppearance.TORI.Body1"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <RadioGroup
                            android:id="@+id/radio_language"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_english"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/settings_language_english"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/safety_yellow"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radio_tamil"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/settings_language_tamil"
                                android:textColor="@color/text_primary"
                                android:buttonTint="@color/safety_yellow" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- General Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface_secondary"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_general"
                        android:textAppearance="@style/TextAppearance.TORI.Headline2"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Low Power Mode -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_low_power_mode"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_low_power_description"
                                android:textAppearance="@style/TextAppearance.TORI.Caption"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switch_low_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/safety_yellow"
                            android:trackTint="@color/surface_elevated" />

                    </LinearLayout>

                    <!-- Background Monitoring -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_background_monitoring"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_background_description"
                                android:textAppearance="@style/TextAppearance.TORI.Caption"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switch_background"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/safety_yellow"
                            android:trackTint="@color/surface_elevated" />

                    </LinearLayout>

                    <!-- Auto Start -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_auto_start"
                                android:textAppearance="@style/TextAppearance.TORI.Body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_auto_start_description"
                                android:textAppearance="@style/TextAppearance.TORI.Caption"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <Switch
                            android:id="@+id/switch_auto_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/safety_yellow"
                            android:trackTint="@color/surface_elevated" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Emergency Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/surface_secondary"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_emergency"
                        android:textAppearance="@style/TextAppearance.TORI.Headline2"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Manage Contacts Button -->
                    <Button
                        android:id="@+id/btn_manage_contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_contacts"
                        android:textAppearance="@style/Theme.TORI.Button.Primary"
                        android:background="@drawable/button_primary_background" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
