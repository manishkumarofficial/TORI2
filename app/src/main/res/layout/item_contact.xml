<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/surface_secondary"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Contact Icon -->
        <TextView
            android:id="@+id/tv_contact_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸ‘¤"
            android:textSize="24sp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:layout_marginEnd="16dp" />

        <!-- Contact Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textAppearance="@style/TextAppearance.TORI.Body1"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 (555) 123-4567"
                android:textAppearance="@style/TextAppearance.TORI.Body2"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_contact_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textAppearance="@style/TextAppearance.TORI.Caption"
                android:textColor="@color/text_tertiary" />

        </LinearLayout>

        <!-- Primary Badge -->
        <TextView
            android:id="@+id/tv_primary_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRIMARY"
            android:textAppearance="@style/TextAppearance.TORI.Caption"
            android:textColor="@color/safety_yellow"
            android:textStyle="bold"
            android:background="@drawable/status_pill_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:layout_marginEnd="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Edit Button -->
            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_edit"
                android:tint="@color/text_secondary" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_delete"
                android:tint="@color/alert_red" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
