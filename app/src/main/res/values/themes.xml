<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TOR-I 2.0 Premium Theme -->
    <style name="Theme.TORI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors (Neon Cyan) -->
        <item name="colorPrimary">@color/neon_cyan</item>
        <item name="colorPrimaryVariant">@color/neon_cyan_dim</item>
        <item name="colorOnPrimary">@color/text_on_neon</item>
        
        <!-- Secondary Colors (Neon Purple) -->
        <item name="colorSecondary">@color/neon_purple</item>
        <item name="colorSecondaryVariant">@color/neon_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background Colors (Deep Space) -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Typography -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/safety_critical</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.TORI.Splash" parent="Theme.TORI">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Monitoring Screen Theme (Immersive) -->
    <style name="Theme.TORI.Monitoring" parent="Theme.TORI">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:keepScreenOn">true</item>
    </style>

    <!-- HUD Mode Theme (High Contrast, Mirrored Logic handled in View) -->
    <style name="Theme.TORI.HUD" parent="Theme.TORI">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/hud_background</item>
        <item name="colorPrimary">@color/hud_text</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/hud_text</item>
        <item name="android:textColorPrimary">@color/hud_text</item>
        <item name="android:textColorSecondary">@color/hud_text_secondary</item>
        <item name="android:keepScreenOn">true</item>
    </style>

    <!-- Glassmorphism Card Theme -->
    <style name="Theme.TORI.Card.Glass">
        <item name="android:background">@drawable/bg_glass_card</item>
        <item name="android:elevation">0dp</item> <!-- Glass doesn't have shadow usually, but glow -->
    </style>

    <!-- Generic Card Theme -->
    <style name="Theme.TORI.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Neon Button Theme -->
    <style name="Theme.TORI.Button.Neon" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/neon_cyan</item>
        <item name="android:textColor">@color/text_on_neon</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Theme.TORI.Button.SOS" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/safety_critical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">24dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="cornerRadius">40dp</item> <!-- Circular/Pill -->
        <item name="android:shadowColor">@color/neon_orange</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.TORI.Display" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.TORI.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.TORI.HUD.Digital" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/hud_text</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Missing Styles -->
    <style name="TextAppearance.TORI.Headline2" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TORI.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.TORI.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.TORI.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_tertiary</item>
    </style>

    <style name="Theme.TORI.Button.Primary" parent="Theme.TORI.Button.Neon">
        <!-- Alias for Neon -->
    </style>

    <style name="Theme.TORI.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/neon_cyan</item>
        <item name="strokeColor">@color/neon_cyan</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="Theme.TORI.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/surface_elevated</item>
        <item name="colorSurface">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorPrimary">@color/neon_cyan</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>
</resources>